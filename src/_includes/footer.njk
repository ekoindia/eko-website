<footer class="pure-g">
	<div class="about-company pure-u-1 pure-u-md-2-5">
		<p><img class="logo" src="{{ website.logo }}" alt="{{ website.short_name }} Logo" width="70" height="20"></p>
		<p>{{ footer.text }}</h4>
		<p><small>Â© {% thisYear %} {{ footer.copyright }}</small></p>
	</div>

	<div class="linkbox pure-u-1 pure-u-md-1-5">
		<h3 class="column-header">{{ footer.column1.header }}</h3>
		{% for link in footer.column1.links -%}
			<a href="{{ link.url }}">{{link.label}}</a>
			<br>
		{%- endfor %}
	</div>

	{# <div class="linkbox pure-u-1 pure-u-md-1-5 l-box">
