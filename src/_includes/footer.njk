<footer class="pure-g">
    <div class="about-company pure-u-4-5 pure-u-md-2-5 pure-u-sm-1 l-box">
      <p><img class="logo" src="{{ website.logo }}" alt="{{ website.title }}" width="70" height="20"></p>
      <p>{{ footer.text }}</h4>
      <p><small>{{ footer.copyright }}</small></p>
      <a href="{{ website.facebook }}" target="_blank" rel="noopener" title="Link to Facebook Page">{% svgico 'facebook-square' %}</a>

      <a href="{{ website.linkedin }}" target="_blank" rel="noopener" title="Link to LinkedIn Page">{% svgico 'linkedin-square' %}</a>
      <a href="{{ website.twitter }}" target="_blank" rel="noopener" title="Link to Twitter Page">{% svgico 'twitter-square' %}</a>
	  <a href="{{ website.github }}" target="_blank" rel="noopener" title="Link to Github Page">{% svgico 'github-square' %}</a>
    </div>

	<div class="pure-u-1 pure-u-md-1-5 pure-u-sm-1 l-box">
      <h3 class="column-header">{{ footer.column1[0].header }}</h3>
      {% for link in footer.column1 %}
        {% if loop.first == false %}
          <a href="{{ link.url }}">{{link.text}}</a>
          <br>
        {% endif %}
      {% endfor %}
    </div>

	<div class="pure-u-1-3 pure-u-md-1-5 pure-u-sm-1-3 l-box">
      <h3 class="column-header">{{ footer.column2[0].header }}</h3>
        {% for link in footer.column2 %}
          {% if loop.first == false %}
            <a href="{{ link.url }}">{{link.text}}</a>
            <br>
           {% endif %}
        {% endfor %}
    </div>

	<div class="pure-u-1-3 pure-u-md-1-5 pure-u-sm-1-3 l-box">
      <br><br><br><br><br><br>
      <a href="{{ website.signup_url }}" class="button">Sign Up</a>
      <br><br>
      <a class="orange-link" href="{{ website.contact_url }}">{% svgico 'paper-plane' %}&nbsp;&nbsp;{{ footer.contact_button_text }}</a>
    </div>
</footer>

