<div class="footer">
  <div class="pure-g">
    <div class="pure-u-4-5 pure-u-md-2-5 pure-u-sm-1 l-box">
      <h2>{{ footer.title }}</h2>
      <p>{{ footer.text }}</h4>
      <p>{{ footer.copyright }}</p>
      {# <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"> #}
      <a href="{{ website.facebook }}" target="_blank" rel="noopener" class="fa fa-facebook"></a>
      <a href="{{ website.linkedin }}" target="_blank" rel="noopener" class="fa fa-linkedin"></a>
      <a href="{{ website.twitter }}" target="_blank" rel="noopener" class="fa fa-twitter"></a>
    </div>
    <div class="pure-u-1 pure-u-md-1-5 pure-u-sm-1 l-box">
      <h3 class="column-header">{{ footer.column1[0].header }}</h3>
      {% for link in footer.column1 %}
        <a href="{{ link.url }}">{{link.text}}</a>
        <br>
      {% endfor %}
    </div>
    <div class="pure-u-1-3 pure-u-md-1-5 pure-u-sm-1-3 l-box">
      <h3 class="column-header">{{ footer.column2[0].header }}</h3>
        {% for link in footer.column2 %}
          <a href="{{ link.url }}">{{link.text}}</a>
          <br>
        {% endfor %}
    </div>
    <div class="pure-u-1-3 pure-u-md-1-5 pure-u-sm-1-3 l-box">
      <br><br><br><br><br><br>
      <a href="{{ website.signup_url }}" class="button">Sign Up</a>
      <br><br>
      <a class="orange-link" href="{{ website.contact_url }}"><img src="/images/paper-plane.svg" alt="">  {{ footer.contact_button_text }}</a>
    </div>
  </div>
</div>

