<section class="band">
    {% for blog in blogslist | reverse %}
    <div class="item">
        <a href="{{ blog.url | url }}" class="card">
        <div class="thumb" style="background-image: url({{ blog.data.image }})"></div>
        <article>
            <h4>{{ blog.data.title }}</h4>
            <time datetime="{{ blog.date | htmlDateString }}">{{ blog.date | readableDate }}</time>
            <p>{{ blog.data.description }}</p>
        </article>
        </a>
    </div>
    {% endfor %}
</section>