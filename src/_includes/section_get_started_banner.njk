<section class="background-section get_started_banner" type="get_started_banner">
	<div class="layout vertical horizontal-reverse-md center">

		<div class="layout horizontal center">
			<img src="{{ item.image }}" alt="{{ item.caption }}">
			{% if item.caption %}
				<p>{{ item.caption }}</p>
			{% endif %}
		</div>

		<div class="flex">
			<h3>{{ item.small_header }}</h3>
			<h1>{{ item.main_header }}</h1>
			<span class="h2-border"></span>
			{% if item.button1_text %}
				<div class="btnbox layout horizontal center wrap">
					<a href="{{ website.signup_url }}" class="button">{{ item.button1_text }}</a>
					<a href="{{ website.contact_url }}" class="button outline">{{ item.button2_text }}</a>
				</div>
			{% endif %}
			{# {% if item.icon1 %}
				<br><br>
				<div class="pure-g">
					<div class="pure-u-1-4 pure-u-md-1-4">
						<center>
							<img src="{{ item.icon1 }}" alt="{{ item.icon1_text }}">
							<p>{{ item.icon1_text }}</p>
						</center>
					</div>
					<div class="pure-u-1-4 pure-u-md-1-4">
						<center>
							<img src="{{ item.icon2 }}" alt="{{ item.icon2_text }}">
							<p>{{ item.icon2_text }}</p>
						</center>
					</div>
				</div>
			{% endif %} #}
		</div>

	</div>
</section>
