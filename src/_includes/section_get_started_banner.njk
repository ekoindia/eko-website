<section class="block bg-shaded get_started_banner" type="get_started_banner">
	<div class="layout vertical horizontal-reverse-md center">

		<div class="layout horizontal center">
			<img src="{{ item.image }}" alt="{{ item.caption }}">
			{% if item.caption_text %}
				<p>{{ item.caption_text }}</p>
			{% endif %}
		</div>

		<div class="flex">
			<div>{{ item.small_header }}</div>
			<h2>{{ item.main_header }}</h2>
			<span class="h2-border"></span>
			{% if item.button1_text %}
				<br><br>
				<div class="btnbox layout horizontal center wrap">
					<a href="{% getSignupURL website.signup_url, business %}" class="button">{{ item.button1_text }}</a>
					<a href="{{ website.contact_url }}" class="button outline">{{ item.button2_text }}</a>
				</div>
			{% endif %}
		</div>

	</div>
</section>
