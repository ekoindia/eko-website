<section class="alternating-steps">
	{% if item.title %}
		<center>
			<p>{{ item.subtitle }}</p>
			<h1>{{ item.title }}</h1>
			<div class="h2-border"></div>
			<br><br>
		</center>
	{% endif %}

	{% for step in item.steps %}
		<div class="pure-g flex-grid">
			<div class="step-text pure-u-1 pure-u-md-1-2 l-box">
				<h2>{{ step.title }}</h2>
            	<br>
				<p>{{ step.text }}</p>
				{% if step.tag %}
					<span class="dot-box">
					<span class="dot"><span class="orange-dot"></span>{{ step.tag }}</span></span></span>
					<br><br><br>
				{% endif%}
				{% if step.button %}
					<a href="{{ step.button_link }}" class="button">{{ step.button }}</a>
					<span class="horizontal-spacer"></span>
					<a href="{{ step.info_link}}">{{ step.more_info }}</a>
					<svg width="3em" height="1em" viewBox="0 0 10 12" class="bi bi-arrow-right" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
						<path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z"/>
					</svg>
				{% endif %}
			</div>
			<div class="step-image pure-u-1 pure-u-md-1-2 l-box">
				<img src="{{ step.image }}" alt="{{ step.title }}">
			</div>
		</div>
	{% endfor %}
</section>
