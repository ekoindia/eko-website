<section class="block alternating-steps" type="alternating_steps">
	{% if item.title %}
		<center>
			<div class="subtitle">{{ item.subtitle }}</div>
			<h2>{{ item.title }}</h2>
			<div class="h2-border"></div>
			<br><br>
		</center>
	{% endif %}

	{% for step in item.steps %}
		<div class="step-box pure-g flex-grid slim_ul">
			<div class="step-text lh-high pure-u-1 pure-u-md-1-2 l-box">
				<h3>{{ step.title }}</h3>
            	{% markdown %}{{ step.text }}{% endmarkdown %}
				{% if step.tag %}
					{% dotTag step.tag, 'filled' %}
					<br><br>
				{% endif%}
				{% if step.button %}
					<a href="{{ step.button_link }}" class="button">{{ step.button }}</a>
					&nbsp;
				{% endif %}
				{% if step.more_info %}
					{% linkArrow step.info_link, step.more_info, 'bold' %}
				{% endif %}
			</div>
			<div class="step-image pure-u-1 pure-u-md-1-2 l-box">
				<img src="{{ step.image }}" alt="{{ step.title }}" loading="lazy">
			</div>
		</div>
	{% endfor %}
</section>
