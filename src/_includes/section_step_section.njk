<section class="step_section container">
    <h1>{{ item.header }}</h1>
    <span class="h2-border"></span>
    <div class="pure-g container">
        {% for box in item.boxes %}
            <div class="pure-u-1 pure-u-md-1-2 pure-u-lg-1-4 boxed">
            <h3 class="box-title">{{ box.title }}</h3>
            <p class="box-text">{{ box.text }}</p>
            <a href="{{ box.link }}">{{ box.link }}</a>
            </div>
        {% endfor %}
    </div>
</section>