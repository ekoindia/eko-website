<section class="background-section">
    <div class="pure-g flex-grid">
        <div class="pure-u-1 pure-u-md-1-2 order-2-sm">
            <br><br>
            <h3>{{ item.small_header }}</h3>
            <h1 class="big-header">{{ item.main_header }}<h1>
            <span class="h2-border"></span>
            {% if item.button1_text %}
            <div class="pure-g flex-grid">
                <div class="pure-u-1-3 pure-u-md-1-2 pure-u-sm-1">
                    <a href="{{ website.signup_url }}" class="button">{{ item.button1_text }}</a>
                </div>
                <div class="pure-u-1-3 pure-u-md-1-2 pure-u-sm-1">
                    <a href="{{ website.contact_url }}" class="button-white">{{ item.button2_text }}</a>
                </div>
            </div>
            {% endif %}
            {% if item.icon1 %}
            <br><br>
            <div class="pure-g">
                <div class="pure-u-1-4 pure-u-md-1-4">
                <center>
                    <img src="{{ item.icon1 }}" alt="">
                    <p>{{ item.icon1_text }}</p>
                </center>
                </div>
                <div class="pure-u-1-4 pure-u-md-1-4">
                <center>
                    <img src="{{ item.icon2 }}" alt="">
                    <p>{{ item.icon2_text }}</p>
                </center>
                </div>
            </div>
            {% endif %}
        </div>
        <div class="pure-u-1 pure-u-md-1-2 l-box order-1-sm">
            <br><br>
            <center><img src="{{ item.image }}" alt="">
            <p>{{ item.caption }}</p></center></center>
        </div>
    </div>
</section>
