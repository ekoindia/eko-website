<section class="icon-list background-section">
	{% if item.header %}
		<center>
			{% if item.subtitle %}
				<p>{{ item.subtitle }}</p>
			{% endif %}
			<h1>{{ item.header }}</h1>
			<div class="h2-border"></div>
		</center>
	{% endif %}

	{% if item.description %}
		<p>{{ item.description }}</p>
	{% endif %}

	<div class="pure-g">
		{% for icon in item.icons %}
			<div class="pure-u-1 pure-u-md-1-{{item.icons | length}} three-box">
				<center>
					<img src="{{ icon.image }}" alt="{{ icon.caption }}" loading="lazy">
					<p>{{ icon.caption }}</p>
				</center>
			</div>
		{% endfor %}
	</div>
</section>