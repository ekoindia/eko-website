<section class="icon-list background-section">
	{% if item.header %}
		<center>
			<h1>{{ item.header }}</h1>
			<div class="h2-border"></div>
		</center>
	{% endif %}
	<div class="pure-g">
		{% for icon in item.icons %}
			<div class="pure-u-1 pure-u-md-1-{{item.icons | length}} three-box">
				<center><img src="{{ icon.image }}" alt="">
				<p>{{ icon.caption }}</p></center>
			</div>
		{% endfor %}
	</div>
</section>