{% extends "./base.njk" %}

{% block seo %}
	<title>{{ website.title }}</title>
	<meta name="description" content="{{ description }}">
	{# <meta name="keywords" content="{{ website.keywords }}"> #}

	{# OpenGraph (Facebook) Social Card #}
	<meta property="og:url" content="{{ env.BASE_URL }}{{ page.url }}">
	<meta property="og:image" content="{{ env.BASE_URL }}{{ image }}">
	<meta property="og:title" content="{{ title }}">
	<meta property="og:description" content="{{ description }}">
	<meta property="og:site_name" content="{{ website.title }}">

	{# Twitter Social Card #}
	<meta name="twitter:site" content="{{ website.twitter_handle }}">
	<meta name="twitter:url" content="{{ env.BASE_URL }}">
	<meta name="twitter:title" content="{{ title }}">
	<meta name="twitter:description" content="{{ description }}">
	<meta name="twitter:image" content="{{ env.BASE_URL }}{{ image }}">
{% endblock %}

{% block custom_style %}
	{{ css_blog | cssmin | safe }}
{% endblock %}

{% block main %}
	<section>
        <h1>{{ title }}</h1>
        <h6>
			<time>{{ date | readableDate }}</time>
			{% for item in tags %}
				<a class="blogtag" href="/blog/{{item}}/">{{ item }}</h1></li></h4>
			{% endfor %}
		</h6>
        <img class="hero" src="{{ image | url }}" alt="{{ image }}">
        <p>{{ content | safe }}</p>
    </section>
{% endblock %}
