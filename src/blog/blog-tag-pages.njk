---
pagination:
  data: collections.blogtags
  size: 1
  alias: tag
permalink: /blog/tags/{{ tag }}/
eleventyComputed:
  title: Blog posts tagged  “{{ tag | capitalize  }}” | {{website.title}}
---

{# this file generates pages for all the blog-categories/tags #}

{% extends "../_layouts/base.njk" %}


{# Ideally set through eleventyComputed in front-matter but not working. Bug? #}
{% set title = "All #" + tag + ' posts | Blog' %}
{% set description = "All blog posts tagged “" + tag | capitalize + '”' %}
{% set keywords = tag + ", blog" %}


{% block custom_style %}
	{{ css_blog | cssmin | safe }}
{% endblock %}

{% block main %}
	<section class="block">
		<header>
			<h1>Blog posts tagged  “#{{ tag }}”</h1>
			<a class="icolink button outline" href="/blog">{% svgico 'arrow-circle-left' %}&nbsp;See all Posts</a>
		</header>

		{% set blogposts = collections[tag] | reverse %}
		{% set pagination = null %}
		{% include "blogslist.njk" %}
	</section>

{% endblock %}