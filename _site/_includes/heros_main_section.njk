<div class="background-section">
    <center>
        <h1>{{ item.header }}</h1>
        <div class="h2-border"></div>
    </center>

    {% for hero_key, hero_val in item %}
        {% if hero_val.single_hero %}
            <center>
                <img class="mw-100" style="width: 500px; height: 300px; background-color: rgba(0,0,255,0.1);" src="{{ hero_val.image }}" alt="{{ hero_val.title }}">
                <br><br>
                <h3>{{ hero_val.title }}</h3>
                <p>{{ hero_val.text }}</p>
            </center>
            <br><br><br><br><br>
        {% elif not hero_val.single_hero %}
            <div class="pure-g flex-grid container">
                <center>
                <div class="pure-u-1 pure-u-md-1 pure-u-lg-1-2 l-box order-1-sm order-1-md">
                    <img src="{{ hero_val.image_left }}" alt="{{ hero_val.title_left }}">
                    <br><br>
                    <h3>{{ hero_val.title_left }}</h3>
                    <p>{{ hero_val.text_left }}</p>
                </div>
                <div class="pure-u-1 pure-u-md-1 pure-u-lg-1-2 l-box order-2-sm order-2-md">
                    <img src=" {{ hero_val.image_right }}" alt="{{ hero_val.title_right }}">
                    <br><br>
                    <h3>{{ hero_val.title_right }}</h3>
                    <p>{{ hero_val.text_right }}</p>
                </div>
                </center>
            </div>
        {% endif %}
    {% endfor %}

