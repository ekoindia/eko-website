<div class="footer">
  <div class="pure-g">
    <div class="pure-u-4-5 pure-u-md-2-5 pure-u-sm-1 l-box">
      <h3>{{ footer.title }}</h3>
      <p>{{ footer.text }}</h4>
      <p>{{ footer.copyright }}</p>
      <a href="{{ base.facebook }}" target="_blank" class="fa fa-facebook"></a>
      <a href="{{ base.linkedin }}" target="_blank" class="fa fa-linkedin"></a>
      <a href="{{ base.twitter }}" target="_blank" class="fa fa-twitter"></a>
    </div>
    <div class="pure-u-1 pure-u-md-1-5 pure-u-sm-1 l-box">
      <h5 class="column-header">{{ footer.column1[0].header }}</h5>
      {% for link in footer.column1 %}
        <a href="{{ link.url }}">{{link.text}}</a>
        <br>
      {% endfor %}
    </div>
    <div class="pure-u-1-3 pure-u-md-1-5 pure-u-sm-1-3 l-box">
      <h5 class="column-header">{{ footer.column2[0].header }}</h5>
        {% for link in footer.column2 %}
          <a href="{{ link.url }}">{{link.text}}</a>
          <br>
        {% endfor %}
    </div>
    <div class="pure-u-1-3 pure-u-md-1-5 pure-u-sm-1-3 l-box">
      <br><br><br><br><br><br>
      <a href="{{ base.signup_url }}" class="button">Sign Up</a>
      <br><br>
      <a class="orange-link" href="{{ base.contact_url }}"><img src="/images/paper-plane.svg" alt="">  {{ footer.contact_button_text }}</a>
    </div>
  </div>
</div>

