{% set align = "right" %}
{% for step_key, step_val in item %}
    {% if align == "left" %}
        <div class="pure-g flex-grid container">
            <div class="pure-u-1 pure-u-md-1 pure-u-lg-1-2 l-box order-2-sm order-2-md">
                <h3>{{ step_val.title }}</h3>
                <p>{{ step_val.text }}</p>
            </div>
            <div class="pure-u-1 pure-u-md-1 pure-u-lg-1-2 l-box order-1-sm order-1-md">
                <img src="{{ step_val.image }}" alt="">
            </div>
        </div>
        {% set align = "right" %}
    {% elif align == "right" %}
        <div class="pure-g flex-grid container">
            <div class="pure-u-1 pure-u-md-1 pure-u-lg-1-2 l-box order-1-sm order-1-md">
                <img src="{{ step_val.image }}" alt="">
            </div>
            <div class="pure-u-1 pure-u-md-1 pure-u-lg-1-2 l-box order-2-sm order-2-md">
                <h3>{{ step_val.title }}</h3>
                <p>{{ step_val.text }}</p>
            </div>
        </div>
        {% set align = "left" %}
    {% endif %}
{% endfor %}