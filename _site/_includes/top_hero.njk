
<div class="pure-g flex-grid contaier">
  <div class="pure-u-1 pure-u-md-1 pure-u-lg-1-2 order-1-sm order-1-md">
  <br><br>
    <div class="pure-g">
      <div class="pure-u-1-2 pure-u-md-10-24">
        <br><br>
        <h5>{{ product.name }}</h5>
      </div>
      <div class="pure-u-1-2 pure-u-md-10-24">
          <img src="{{ product.top_hero.icon }}" alt="">
      </div>
    </div>
    <div class="pure-g">
      <div class="pure-u-1">
        <h1>{{ product.top_hero.description }}</h1>
        <p>{{ product.top_hero.summary }}</p>
      </div>
    </div>
    <div class="pure-g">
      <div class="pure-u-1 pure-u-md-1-2 l-box">
        <a href="https://eko.in/sign-up" class="button">{{ product.top_hero.button }}</a>
      </div>
      <div class="pure-u-1 pure-u-md-1-2 l-box">
      {% if product.top_hero.video_link %}
        <a href="{{ product.top_hero.video_link }}" target="_blank">
          {{ product.top_hero.video_text }}
          <svg width="2em" height="1.5em" viewBox="0 0 16 16" class="bi bi-arrow-right" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z"/>
            </svg>
        </a>
      {% endif %}
      </div>
    </div>
  </div>
  <div class="pure-u-1 pure-u-md-1 pure-u-lg-1-2 order-2-sm order-2-md">
    <img src="{{ product.top_hero.image }}" alt="{{ product.name }} image">
  </div>
</div>
<br><br><br><br>
{% iconScroll %}
