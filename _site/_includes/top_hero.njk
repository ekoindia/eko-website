
<div class="pure-g">
  <div class="pure-u-1 pure-u-md-1-2">
  <br><br>
    <div class="pure-g">
      <div class="pure-u-1-2 pure-u-md-10-24">
        <br><br>
        <h5>{{ product.name }}</h5>
      </div>
      <div class="pure-u-1-2 pure-u-md-10-24">
          <img src="{{ product.top_hero.icon }}" alt="">
      </div>
    </div>
    <div class="pure-g">
      <div class="pure-u-1">
        <h1>{{ product.top_hero.description }}</h1>
        <p>{{ product.top_hero.summary }}</p>
      </div>
    </div>
    <div class="pure-g">
      <div class="pure-u-1 pure-u-md-1-2 l-box">
        <a href="https://eko.in/sign-up" class="button">{{ product.top_hero.button }}</a>
      </div>
      <div class="pure-u-1 pure-u-md-1-2 l-box">
      {% if product.top_hero.video_link %}
        <a href="{{ product.top_hero.video_link }}" target="_blank">
          {{ product.top_hero.video_text }}
          <span class="glyphicon glyphicon-play-circle"></span>
        </a>
      {% endif %}
      </div>
    </div>
  </div>
  <div class="pure-u-1 pure-u-md-1-2">
    <img src="{{ product.top_hero.image }}" alt="{{ product.name }} image">
  </div>
</div>
<br><br><br><br>
{% iconScroll %}
